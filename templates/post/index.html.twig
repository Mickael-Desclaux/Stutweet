{% extends "base.html.twig" %}


{% block body %}

	<div class="d-flex flex-wrap container-fluid mt-3 .offset-lg-1">
		{% for post in posts %}
			<div class="card m-5" style="width: 20rem;">

				{% if post.image %}	
					<img src={{post.image}} alt={{post.title}}
				{% endif %}
				<div class="card-body">

				{% if post.title %}				
					<h5 class="card-title text-center">{{post.title}}</h5>
				{% endif %}
					<p class="card-text text-center">{{post.content}}</p>

				<a href="{{ path('delete-post', {'id': post.id}) }}" class="btn btn-danger">Supprimer</a>
				<a href="{{ path('edit-post', {'id': post.id}) }}" class="btn btn-warning">Modifier</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}

